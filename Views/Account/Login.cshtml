
@model UserModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
</head>
<body>
    <form asp-controller="Account" asp-action="Login" method="post">
        <h1>Iniciar Sesión</h1>

        <div class="input-wrapper">
            <input asp-for="Email" placeholder="Email">
            <img class="input-icon" src="css/img/email.svg" alt="">
        </div>

        <div class="input-wrapper">
            <input asp-for="Password" placeholder="Contraseña" type="password">
            <img class="input-icon" src="css/img/password.svg" alt="">
        </div>

        <button class="btn" type="submit">Iniciar Sesión</button><br>

        <div class="registrarse">
            ¿No tienes una cuenta? <a asp-controller="Registro" asp-action="Index">Registrarse</a>
        </div>
    </form>
</body>
</html>
